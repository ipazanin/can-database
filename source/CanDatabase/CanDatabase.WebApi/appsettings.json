{
  "AppConfiguration": {
    "MajorVersion": 1,
    "MinorVersion": 0,
    "Version": "1.0.0"
  },
  "DatabaseConfiguration": {
    "CommandTimeoutInSeconds": 360,
    "QueryTrackingBehavior": 1,
    "EnableDetailedErrors": false,
    "EnableSensitiveDataLogging": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "CanDatabase.Application.Infrastructure": "Warning",
      "CanDatabase.Domain.Services": "None"
    }
  },
  "SystemTextJsonSerializerConfiguration": {
    "AllowTrailingCommas": true,
    "MaxDepth": 100,
    "PropertyNameCaseInsensitive": true,
    "ReadCommentHandling": 1
  },
  "AllowedHosts": "*"
}
